{
  "name": "elixir-repl",
  "displayName": "elixir-repl",
  "description": "A lisp-like REPL experience for elixir using IEx",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.96.0"
  },
  "activationEvents": [
    "onCommand:elixir-repl.startSession",
    "onCommand:elixir-repl.recompile",
    "onCommand:elixir-repl.clear",
    "onCommand:elixir-repl.sendSelected"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "elixir-repl.startSession",
        "title": "Elixir REPL: Start IEx Session"
      },
      {
        "command": "elixir-repl.recompile",
        "title": "Elixir REPL: Run recompile"
      },
      {
        "command": "elixir-repl.sendSelected",
        "title": "Elixir REPL: Send text for evaluation"
      },
      {
        "command": "elixir-repl.clear",
        "title": "Elixir REPL: Clear iEX"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "elixir-repl.startSession",
          "when": "view == elixir-repl-terminal",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "elixir-repl.sendSelected",
          "when": "editorHasSelection",
          "group": "elixir-repl"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "elixir-repl-container",
          "title": "Elixir REPL",
          "icon": "$(terminal)"
        }
      ]
    },
    "views": {
      "elixir-repl-container": [
        {
          "id": "elixir-repl-terminal",
          "name": "IEx Session"
        }
      ]
    },
    "keybindings": [
      {
        "command": "elixir-repl.sendSelected",
        "key": "ctrl+x /",
        "when": "editorTextFocus"
      },
      {
        "command": "elixir-repl.clear",
        "key": "ctrl+x backspace",
        "when": "editorTextFocus"
      },
      {
        "command": "elixir-repl.startSession",
        "key": "ctrl+x ctrl+x",
        "when": "editorTextFocus"
      },
      {
        "command": "elixir-repl.recompile",
        "key": "ctrl+x ctrl+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "publisher": "otto-nascarella",
  "repository": {},
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/node": "20.x",
    "typescript": "^5.8.2"
  }
}
